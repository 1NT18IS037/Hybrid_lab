<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="viewEnd" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/buAC"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="AC"
android:onClick="acEvent"
            />
        <Button
            android:id="@+id/buMul"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="*"
            android:onClick="operatorEvent"

            />
        <Button
            android:id="@+id/buPM"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="+/-"
android:onClick="numberEvent"
            />
        <Button
            android:id="@+id/buDiv"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="/"
            android:onClick="numberEvent"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buSeven"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:background="@color/black"
            android:text="7"

            />
        <Button
            android:id="@+id/bueight"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:onClick="numberEvent"
            android:background="@color/cardview_light_background"
            android:text="8"

            />
        <Button
            android:id="@+id/buNine"
            android:layout_width="30pt"
            android:onClick="numberEvent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="9"

            />
        <Button
            android:id="@+id/buPercentage"
            android:layout_width="30pt"
            android:onClick="percentEvent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="%"

            />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/buFour"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="4"

            />
        <Button
            android:id="@+id/buFive"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="5"

            />
        <Button
            android:id="@+id/buSix"
            android:layout_width="30pt"
            android:onClick="numberEvent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="6"

            />
        <Button
            android:id="@+id/buPlus"
            android:onClick="operatorEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="+"

            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/buOne"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="1"

            />
        <Button
            android:id="@+id/buTwo"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="2"

            />
        <Button
            android:id="@+id/buThree"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="3"

            />
        <Button
            android:id="@+id/buMinus"
            android:onClick="operatorEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="-"

            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buZero"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="0"

            />
        <Button
            android:id="@+id/buDot"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="."


            />
        <Button
            android:id="@+id/buEq"
            android:layout_width="30pt"
            android:onClick="equalEvent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:text="="

            />
    </TableRow>
    </LinearLayout>